<% content_for :top_section do %>
  <div class="event-header" style="background-image: url(<%= @event.cover_image.url(:large) if @event.cover_image? %>);">
    <div class="content-wrapper">
      <div class="content">
        <h1><%= @event.name_or_default %></h1>
        <div class="school"><%= @event.school.name %></div>
        <div class="town"><%= @event.school.town.name_with_kind %></div>
      </div>
    </div>
  </div>
<% end %>

<div class="event">
  <% unless @event.approved? %>
    <p><em>Събитието очаква потвърждение от учебното заведение.</em></p>
  <% end %>

  <ul class="details inline">
    <li>
      <label>Дата:</label>
      <span class="value"><%= l @event.date %></span>
    </li>
    <li>
      <label>Лектор:</label>
      <span class="value"><%= @event.speaker.name %></span>
    </li>
    <% if @event.public_email.present? %>
      <li>
        <label>Имейл за връзка:</label>
        <span class="value"><%= mail_to @event.public_email %></span>
      </li>
    <% end %>
    <li>
      <label>Адрес:</label>
      <span class="value"><%= @event.school.full_address %></span>
    </li>

    <% if @event.url.present? %>
      <li>
        <label>Сайт:</label>
        <span class="value"><%= link_to truncate(@event.url, length: 50), @event.url, target: '_blank', rel: 'nofollow' %></span>
      </li>
    <% end %>
  </ul>

  <h2>Описание</h2>

  <div class="details">
    <%= markup @event.details %>
  </div>
</div>
