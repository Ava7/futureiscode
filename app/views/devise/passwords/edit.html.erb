<h2>Промяна на парола на <%= translated_profile_type_for(resource) %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: 'Нова парола', required: true, autofocus: true %>
    <%= f.input :password_confirmation, label: 'Повторете новата парола', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Промени паролата' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
