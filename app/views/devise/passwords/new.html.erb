<h2>Забравена парола на <%= translated_profile_type_for(resource) %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, hint: t('hints.forgotten_password.signup_email_html', contacts_path: contacts_path) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Изпращане на инструкции за възстановяване на паролата' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
