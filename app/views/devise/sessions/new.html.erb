<h2>Вход като <%= translated_profile_type_for(resource) %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, hint: false %>
    <%= f.input :password, required: false, hint: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Вход като #{translated_profile_type_for(resource)}" %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
